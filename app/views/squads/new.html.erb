
<h1 class="text-xl text-white font-bold mt-4 mb-4">Create a New Squad</h1>

<%= form_with(model: @squad, local: true) do |form| %>
  <div class="flex justify-center mb-4">
    <%= form.label :name, class: 'text-white block text-sm font-medium text-gray-700' %>
    <%= form.text_field :name, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 w-1/2' %>
  </div>

  <div class="position-container flex justify-center gap-4 mb-4 font-bold">
  <% ['LW', 'ST', 'RW'].each do |position| %>
  <%= render 'position_field', position: position, form: form, squad: @squad, editable: false %>
  <% end %>
  </div>

  <div class="position-container flex justify-center gap-4 mb-4 font-bold">
    <% ['CM', 'LCM', 'RCM'].each do |position| %>
      <%= render 'position_field', position: position, form: form, squad: @squad, editable: false %>
    <% end %>
  </div>

  <div class="position-container flex justify-center gap-4 mb-4 font-bold">
    <% ['LB', 'LCB', 'RCB', 'RB'].each do |position| %>
      <%= render 'position_field', position: position, form: form, squad: @squad, editable: false %>
    <% end %>
  </div>

  <div class="position-container flex justify-center gap-4 mb-4 font-bold">
    <%= render 'position_field', position: 'GK', form: form, squad: @squad, editable: false %>
  </div>

  <div class="flex justify-center mt-10 actions">
    <%= form.submit 'Create Squad', class: 'px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600' %>
  </div>
<% end %>

<%= link_to 'Back to Squads', squads_path, class: 'text-blue-400 hover:underline' %>
