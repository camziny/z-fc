<div class="mini-player-card bg-white shadow-lg rounded-lg overflow-hidden w-28 h-40 sm:w-32 sm:h-44 md:w-36 md:h-48 lg:w-40 lg:h-52 xl:w-44 xl:h-56 2xl:w-48 2xl:h-60 mt-5 mx-auto">
  <%= link_to player_path(player.api_id), class: "block h-full" do %>
    <% image_path = player_image_path(player.api_id) %>
    <div class="flex items-center justify-center mt-1 h-1/3">
      <%= image_tag(image_path, alt: player.name, class: "w-12 h-12 sm:w-14 sm:h-14 md:w-16 md:h-16 lg:w-18 lg:h-18 xl:w-20 xl:h-20 2xl:w-22 2xl:h-22 object-cover object-center") %>
    </div>
    <div class="px-2 py-1 flex flex-col items-center h-2/3">
      <h3 class="player-name font-bold text-xs sm:text-sm md:text-sm lg:text-lg xl:text-lg 2xl:text-lg text-gray-900 mb-1 text-center truncate w-full" style="max-height: 3rem;"><%= player.name %></h3>
      <div class="flex items-center justify-center mb-1">
        <span class="text-xs font-bold text-gray-800 mr-2"><%= player.rating %></span>
        <span class="text-xs text-gray-600"><%= player.position %></span>
      </div>
      <div class="grid grid-cols-2 gap-1 text-xs font-semibold text-gray-800 mb-1 hidden sm:grid">
        <span><%= player.pace %> PAC</span>
        <span><%= player.shooting %> SHO</span>
        <span><%= player.passing %> PAS</span>
        <span><%= player.dribbling %> DRI</span>
        <span><%= player.defending %> DEF</span>
        <span><%= player.physicality %> PHY</span>
      </div>
      <div class="mt-1 flex items-center space-x-2 p-1">
      <%= image_tag(nation_image_path(player.nation), alt: "Nation Flag", class: "w-4 h-4 sm:w-4 sm:h-4 md:w-4 md:h-4 lg:w-5 lg:h-5") if player.nation.present? %>
      <%= image_tag(club_image_path(player.club), alt: "Club Flag", class: "w-4 h-4 sm:w-4 sm:h-4 md:w-4 md:h-4 lg:w-5 lg:h-5") if player.club.present? %>
      </div>
    </div>
  <% end %>
  <% if defined?(editable) && editable %>
  <%= button_to squad_squad_player_path(squad, squad_player), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-700' do %>
    <i class="fas fa-trash-alt"></i>
  <% end %>  
  <% end %>
</div>
