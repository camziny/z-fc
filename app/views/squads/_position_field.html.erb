<% squad_player = squad.squad_players.find_by(position: position) %>
<div class="field mt-12">
  <% if squad_player && squad_player.player %>
    <%= render 'mini_player_card', player: squad_player.player, editable: editable, squad: squad, squad_player: squad_player %>
    <% if editable %>
      <%= link_to squad_squad_player_path(squad, squad_player), method: :delete, class: 'text-red-500 hover:text-red-700' do %>
        <i class="fas fa-times"></i>
      <% end %>
    <% end %>
  <% else %>
  <%= link_to "Add #{position}", new_for_squad_player_path(squad_id: squad.id, position: position), class: "add-player-button w-32 h-32 md:w-40 lg:w-48 px-4 py-2 bg-gray-300 rounded hover:bg-gray-400 text-center truncate" %>
  <% end %>
</div>